<!-- Layout for the webpage -->

<!DOCTYPE html>
<html>
    <header>
        <%- include('./partials/header'); %>
    </header>
    <head>
        <meta charset = "utf-8">
        <meta name = "viewport" content = "width=device-width, initial-scale=1.0">
        <title>Learning log</title>
        <link rel="stylesheet" href="/css/style.css" >
    </head>
    <body>
        <div id="nav">
            <div class="col-sm nav-align">
                <h1 id="title">Learning log</h1>
            </div>
            <div class="col-sm nav-align">
                <a href="/">
                    <span class="button">Home</span>
                </a>
                <a href="/register">
                    <span class="button">Register</span>
                </a>
                <% if (currentUser){ %>
                <a href="/topics">
                    <span class="button">Topics</span>
                </a>
                <a href="/users">
                    <span class="button">Users</span>
                </a>
                <% } %>
            </div>
    
            <div class="login">
                <% if (loggedIn) { %>
                    <p>Logged in as
                    <%= currentUser.userName %></a>
                    <span class="log-out">
                        <a href="/logout">Log out</a>
                    </span>
                    </p>
                <%} else {%>
                    <a href="/login">Log In</a>
                <% } %>
            </div>
        </div>


        <div class = "container">
            <%- body %>
        </div>
        <div class="flashes">
            <% if (flashMessages) { %>
              <% if (flashMessages.success) { %>
                <div class="flash success"><%= flashMessages.success %></div>
              <% } else if (flashMessages.error) { %>
                <div class="flash error"><%= flashMessages.error %></div>
              <% } %>
            <% } %>
        </div>
    </div>
    </body>
    <footer>
        <%- include('./partials/footer'); %>
    </footer>
</html>