<div class = "col-sm-6">
    <h3>Journal entries for topic: <%= topic.topicName %></h3>
    <div style="overflow-x:auto;">
        <table class = "center">
            <thead>
                <tr>
                    <th>Heading</th>
                    <th>Content</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% entry.forEach(e => {%>
                <tr>
                <% if (e.topic === topic.topicName){ %>
                    <td><%= e.heading%></td>
                    <td><%= e.content%></td>
                    <td>
                        <a class = "button" href = "<%= `/topics/${topic._id}/${e._id}` %>">
                        Edit entry
                        </a>
                    </td>
                    <td>
                        <a class = "button" href = "<%= `/topics/${topic._id}/${e._id}/delete?_method=DELETE` %>" onclick ="return confirm('Are you sure you want to delete this journal entry?')" a>Delete</a>
                    </td>
                    <% } %>
                </tr>
                <% })%>
            </tbody>
        </table>
    </div>
</div>
